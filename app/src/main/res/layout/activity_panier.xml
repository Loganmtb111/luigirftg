<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context=".PanierActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon Panier"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="15dp" />

    <TextView
        android:id="@+id/textePanierVide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Votre panier est vide"
        android:textSize="18sp"
        android:textColor="#999999"
        android:gravity="center"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listePanier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnViderPanier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vider le panier"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnValiderCommande"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Valider la commande"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>